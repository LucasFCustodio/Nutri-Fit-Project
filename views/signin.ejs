<link rel="stylesheet" href="/styles/signin.css">

<div id="nutrifit-logo-container">
    <img id="signin-logo" class="logo" src="/images/nutri-fit-logo.jpg" alt="NutriFit Logo">
</div>
<div class="signin-wrapper">
  <main class="signin-card" role="main" aria-labelledby="signin-heading">
    <h1 id="signin-heading">Welcome to NutriFit</h1>

    <form id="signin-form" action="/home" method="post" novalidate>
      <div id="signin-error" class="input-error" aria-live="polite"></div>

      <div class="form-row">
        <div class="form-group" style="flex:1;">
          <label for="firstName">First name</label>
          <input type="text" id="firstName" name="firstName" required aria-required="true">
        </div>
        <div class="form-group" style="flex:1;">
          <label for="lastName">Last name</label>
          <input type="text" id="lastName" name="lastName" required aria-required="true">
        </div>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn1">Sign in</button>
      </div>

    </form>
  </main>
</div>

<script src="/js/signin.js" defer></script>